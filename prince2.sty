\renewcommand*{\maketitle}{%
\hypersetup{pageanchor=false}
\begin{titlepage}
    \raggedright
    {\scshape\LARGE Project Documentation \par}
    \vspace{2cm}
    {\scshape\Huge \@doctype \par}
    \vspace{3cm}
    {\scshape\Large Project: \@project \par}
    \vspace{5cm}
    {\scshape\large Date: \@date \par}
    {\scshape\large Author: \@author \par}
    {\scshape\large Client: \@client \par}
    {\scshape\large Version: 1.0\par}
    \vfill
\end{titlepage}
\hypersetup{pageanchor=true}
}
